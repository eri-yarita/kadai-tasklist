<h1>タスク一覧</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ステータス</th>
      <th>タスク</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% tasks.each do |task| %>
      <tr>
        <td><%= task.status %></td>
        <td><%= task.content %></td>
        <% if current_user == task.user %>
          <td><%= link_to '編集', edit_task_path(task), class: 'btn btn-light' %><%= link_to "削除", task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
  <%= paginate @tasks %>
</div>

<%= link_to 'タスク作成', new_task_path, class: "btn btn-primary" %>